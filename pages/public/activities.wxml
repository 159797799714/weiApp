                <!-- <com-money-font class-str="amount" wx:if="{{item.need_point-0}}" num="{{item.need_point}}" sym="" fontSize="40" color="#FF4444"></com-money-font> -->
                <text wx:if="{{item.need_point-0}}" class="f-48 amount col-f44">{{item.need_point}}</text>
                <text class="point-unit" wx:if="{{item.need_point-0}}">积分</text>
              </block>
              <text wx:if="{{content.config.original_price_show=='true'}}" class="al-original-price">￥{{filter.transBigNumber(item.price)}}</text>
            </view>
            <view class="bottom-bar">
              <!-- buy_mod  0:限时   1:限量 -->

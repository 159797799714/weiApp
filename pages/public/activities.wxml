        <!-- <view class="iconleft iconfont icon-rgline"></view> -->
        <view class="iconleft iconfont icon-miaosha-icon"></view>
        <view class="tval">{{content.config.title}}</view>
        <!-- <view class="iconright iconfont icon-rgline"></view> -->
      </block>
      <block wx:if="{{!isHotTab}}">
        <text>{{content.config.title}}</text>
        <text class="al-indicate" wx:if="{{content.config.list_display_style == 3}}">
          <text class="al-indicate-current">{{content.config.current_indicate_index * 1 + 1}}</text>
          <text class="al-indicate-all">/{{content.activities.length}}</text>
        </text>
      </block>
    </view>

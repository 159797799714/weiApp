          <view class="al-main-img">
            <image class="imgs" mode="widthFix" src="{{item.seckill_image}}" />
          </view>
          <view class="al-infos">
            <view class="al-good-name" wx:if="{{content.config.name_show=='true'}}">
              <text>{{item.product_name}}</text>
            </view>
            <view class="labers">
              <text class="laber-item">限量秒杀</text>
              <text class="laber-item origin-laber">平台补贴</text>
              <text class="laber-item" wx:if="{{item.promotion_amount}}">返现￥{{filter.transBigNumber(item.promotion_amount/100)}}</text>
            </view>
            <view class="al-price {{item.statusClass || ''}}">
              <text class="al-price-prefix">{{content.config.price_name}}</text>
              <text class="al-price-unit">￥</text>
              <block wx:if="{{item.type==1 && item.dingjin}}">
                <text class="al-current-price">
                  {{filter.transBigNumber((item.price * 1000 - item.privileged_cash * 1000 ) / 1000)}}
                </text>
              </block>
              <block wx:elif="{{item.type==2 && item.start_price}}">
                <text class="al-current-price">{{filter.transBigNumber(item.start_price)}}</text>
              </block>
              <block wx:elif="{{item.type==4 && item.min_price}}">
                <text class="al-current-price">{{filter.transBigNumber(item.min_price)}}</text>
              </block>

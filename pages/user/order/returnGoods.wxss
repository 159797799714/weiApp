/* pages/user/order/returnGoods.wxss */

.returnArticle .addImgList .imgList{
  position: relative;
}
.returnArticle .addImgList .imgList .iconbox{
  width: auto;
  height: auto;
  display: flex;
  justify-content: center;
  align-content: center;
  margin: 0;
  border: none;
  position: absolute;
  top: 0;
  right: 0;
  border-radius: 0 0 0 8rpx;
  overflow: hidden;
}
.returnArticle .addImgList .imgList .iconbox .iconmask{
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.4;
  margin: 0;
  border: none;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.returnList{
  margin-bottom: 42rp;
}
.orderTotal{
  padding: 30rpx 30rpx 0;
  line-height: 1;
}
.returnArticle .addImgList .imgList .iconbox .iconfont{
  font-size: 26rpx;
  color: #fff;
  font-weight: bold;
  line-height: 26rpx;
  padding: 15rpx;
  position: relative;
  z-index: 2;
}
.paymentButton{
  box-sizing: border-box;
  padding: 30rpx 30rpx 40rpx;
  bottom: 0;
  left: 0;
  position: fixed;
  margin: 0;
  width: 100%;
}
.paymentButton view{
  border: 0!important;
}
.imgList{
  z-index: 2;
  padding: 20rpx 0;
  margin-top: -30rpx;
  background: #ffffff;
}
.img-item{
  position: relative;
  display: inline-block;
  vertical-align: top;
  height: 110rpx;
  width: 110rpx;
  margin-right: 10rpx;
  border: 1rpx solid #dddddd;
  text-align: center;
  color: #dddddd;
}
.img-item .imgLi{
  height: 100%;
  width: 100%;
}
.addIcon{
  font-size: 55rpx;
  height: 55rpx;
  width: 55rpx;
  line-height: 110rpx;
  overflow: hidden;
}
.iconbox{
  position: absolute;
  top: 0;
  right: 0;
  height: 55rpx;
  width: 55rpx;
  border-radius: 0 0 5rpx 5rpx;
  background: #666;
  color: #fff;
  text-align: center;
  line-height: 55rpx;
  font-size: 28rpx;
}
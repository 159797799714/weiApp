/* // 文字超出隐藏 */
.oneline-hidden{
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.twoline-hidden{
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.threeline-hidden{
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 3;
	-webkit-box-orient: vertical;
}
